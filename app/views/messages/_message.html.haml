.message
  .message-info
    %p.message-info__contributor
      = message.user.name
    %p.message-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-text
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'message-text__image' if message.image.present?
